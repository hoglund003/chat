<%= render "devise/shared/layout" do %>
  <%= render "devise/shared/layout_left" do %>
    <h1 class="text-primary-content text-5xl font-bold">
      Welcome to Chat
    </h1>
    <h2 class="text-copy text-3xl">
      The <b>minimalistic</b> <i>slack like</i> chat app
    </h2>
    <%= link_to "Get started", new_user_registration_path, class: "btn btn-secondary btn-md btn-wide text-2xl" %>
  <% end %>

  <%= render "devise/shared/layout_middle" do %>
      <div class="avatar flex justify-center items-center md:h-full">
        <div class="w-24 rounded-full h-fit">
          <img src="/chat_logo.png" />
        </div>
      </div>
  <% end %>

  <%= render "devise/shared/layout_right" do  %>
    <div class="text-secondary-content max-w-96 flex flex-col gap-4">
      <h2 class="text-2xl font-bold">Log in</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="flex flex-col gap-2">
          <div class="font-bold flex flex-col gap-2">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered text-black" %>
          </div>

          <div class="font-bold flex flex-col gap-2">
            <%= f.label :password %>
            <%= f.password_field :password, autocomplete: "current-password", class: "input input-bordered text-black" %>
          </div>

          <%# if devise_mapping.rememberable? %>
          <!--          <div class="field">-->
          <%#= f.check_box :remember_me %>
          <%#= f.label :remember_me %>
          <!--          </div>-->
          <%# end %>

          <%= f.submit "Log in", class: "btn btn-primary btn-md text-lg mt-4" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  <% end %>
<% end %>
