
<div class="flex w-full gap-8">
    <div class="w-max">
        <%= render partial: "list", locals: { channels: @channels, current_channel: @channel } %>
    </div>
    <div class="w-full">
        <div class="h-full flex flex-col">
            <%= turbo_stream_from :messages %>
          <div class="h-96 overflow-scroll mb-3 flex flex-col-reverse">
            <div id="messages">
              <%= render @messages %>
            </div>
            <div id="next_link">
              <%= render partial: "messages/next_page" %>
            </div>
          </div>

          <%= render "messages/form", channel: @channel %>
        </div>
    </div>
</div>



