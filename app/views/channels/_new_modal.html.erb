<div>
  <button class="btn" onclick="add_channel_modal.showModal()">
    <%= t('channel.create_channel') %>
  </button>
  <dialog id="add_channel_modal" class="modal">
    <div class="modal-box text-black flex flex-col gap-2">
      <form method="dialog">
        <button class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2">âœ•</button>
      </form>
      <h1 class="text-2xl font-bold">
        <%= t('channel.create_channel') %>
      </h1>
      <%= form_with model: Channel.new do |f| %>
        <div class="flex flex-col gap-4">
          <%= f.label :name, t('name'), class: "text-xl" %>
          <%= f.text_field :name, class: "input input-bordered", placeholder: t('channel.placeholder'), autocomplete: "off" %>
          <%= f.submit t('confirm') %>
        </div>
      <% end %>
    </div>
  </dialog>
</div>