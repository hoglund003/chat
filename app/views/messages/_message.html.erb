<div
  id="<%= dom_id(message) %>"
  data-controller="scroll-into-view"
  class="flex flex-col py-2 border-t border-t-copy"
>
  <div>
    <span class="font-bold">
      <%= message.user.nickname %>
    </span>
    <span class="text-xs">
      <%= sent_at message %>
    </span>
  </div>
  <span>
    <%= message.text %>
  </span>
</div>